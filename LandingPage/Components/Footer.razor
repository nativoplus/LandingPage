@implements IDisposable
@inject NavigationManager NavigationManager
@inject IJSRuntime jsRuntime

<SimpleModal>
    <Content>
        <iframe class="sendgrid-signup-form" src="https://cdn.forms-content.sg-form.com/ab060afc-a0b5-11ec-8140-b624b54c1e17" />
    </Content>
</SimpleModal>

<!-- start of page footer -->
<footer id="footer">
    <div class="bg-dark2 pad-top-lg pad-bottom-xs">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-xs-12 col-sm-4 mar-bottom-xs">
                    <!-- logo -->
                    <Logo NavLogo="false" />

                    @*<p>We grow ideas into businesses<br />“and have fun while doing it.”</p>*@
                    <!-- social -->
                    <ul class="list-inline social pad-top-xs">
                        <li><a href="https://www.linkedin.com/company/nativoplus/" aria-label="Visit our LinkedIn page"><i class="fa fa-2x fa-linkedin" aria-hidden="true"></i></a></li>
                        <li><a href="https://www.facebook.com/nativeplussolutions" aria-label="Visit our Facebook page"><i class="fa fa-2x fa-facebook" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-4 mar-bottom-xs">
                    <ul class="unstyled">
                        <li><a @onclick:preventDefault @onclick=@( () => NavigateTo("/")) href="#" aria-label="Go to home page">Home</a></li>
                        <li><a @onclick:preventDefault @onclick=@( () => NavigateTo("/about")) href="#" aria-label="Learn more about us">About us</a></li>
                        <li><a @onclick:preventDefault @onclick=@( () => NavigateTo("/services")) href="#" aria-label="Learn more about our services">Services</a></li>
                        <li><a @onclick:preventDefault @onclick=@( () => NavigateTo("/portfolio")) href="#" aria-label="Learn more about our portfolio">Portfolio</a></li>

                    </ul>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-4 mar-bottom-xs">
                    <span class="title text-uppercase">Contact us</span>
                    <!-- start of twitter-feed -->
                    <p> 825 Marshall St. Redwood City<br />California<br />Phone: +1(650) 382-2451<br />Email: nativoplus@nativoplus.com<br /> </p>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-4 mar-bottom-xs">
                    <span class="title text-uppercase">Newsletter</span>
                    <!-- start of button let's talk' -->
                    <form action="#" class="email-form">
                        <label>
                            Don’t be a stranger. Stay in touch!
                            Sign up to get awesome updates from Nativoplus!
                        </label>
                        <button type="button" class="btn-green-hover newsletter-sub-btn">Subscribe</button>
                    </form>
                    <!-- end of button let's talk -->
                </div>
            </div>
        </div>
    </div>
    <!-- start of f-bottom -->
    <div class="bg-dark3 f-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <span class="pull-left">© NativoPlus 2022, All Rights Reserved.</span>
                    <span class="pull-right"><a @onclick:preventDefault @onclick=@( () => NavigateTo("/terms-and-conditions")) href="#">Terms &amp; Conditions</a></span>
                </div>
            </div>
        </div>
    </div><!-- end of f-bottom -->
</footer><!-- end of page footer -->
@code {
    public void NavigateTo(string path)
    {
        // Forced Reload To Ensure a Fresh Instance of Javascript Files.
        NavigationManager.NavigateTo(path, forceLoad: true);
    }

    private void LocationChanged(object sender, LocationChangedEventArgs e)
    {
        string navigationMethod = e.IsNavigationIntercepted ? "HTML" : "code";
    }

    void IDisposable.Dispose()
    {
        // Unsubscribe from the event when our component is disposed
    }
}
