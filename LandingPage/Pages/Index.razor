@*Imports*@
@inject IJSRuntime jsRuntime
@using LandingPage
@using LandingPage.Components;
@*Page*@
@layout EmptyLayout
@page "/"


<!-- start of main page wrapper -->
<div id="wrapper">
    <Preloader />
    <div class="w1">
        <NavigationBar />
        <!-- start of page main section -->
        <main id="main">
            <!-- start of main banner -->
            <section class="main-banner text-center">
                <!-- slide -->
                <div class="slide bg-img-full" style="background-image: url(template/images/bg/landing.webp);">
                    <span class="bg-overlay"></span>
                    <div class="caption">
                        <div class="holder">
                            <h1 class="heading">Build Your <span id="rotating"></span></h1>
                            <p>It's all about you. From sketch to releasing your app.<br /> We'll be there to guide you at every step. </p>
                            <a href="#" class="btn btn-green-custom text-uppercase">Let's Talk!</a>
                        </div>
                    </div>
                </div>
                <a href="#" data-scroll-nav="1" class="btn-bottom pe-7s-angle-down"></a>
            </section><!-- end of main banner -->
            <div class="container pad-top-lg" data-scroll-index="1">
                <!-- start of main-heading -->
                <header class="main-heading text-center row mar-bottom-md">
                    <div class="col-xs-12">
                        <h2 class="heading">A new type of of consultancy</h2>
                        <p>Digital to the core. Open by default. Empowered talent. Public servants at heart.<br />We’re a new type of government consultancy for the digital era.</p>
                    </div>
                </header><!-- end of main-heading -->
                <div class="pad-bottom-sm pad-top-md">
                    <div class="row">
                        <!-- start of icon-box -->
                        <div class="col-xs-12 col-sm-6 mar-bottom-sm icon-box">
                            <span class="pe-7s-plugin main-color icon add"></span>
                            <div class="holder">
                                <span class="title large">Solving important problems</span>
                                <p>
                                    Every day millions of people — from veterans to immigrants — depend on government services to fulfill their needs. But too often these services
                                    are delivered using outmoded policies, practices, and technologies. We’re public servants at heart who are driven to make these services work
                                    better in the internet era.
                                </p>
                            </div>
                        </div><!-- end of icon-box -->
                        <!-- start of icon-box -->
                        <div class="col-xs-12 col-sm-6 mar-bottom-sm icon-box">
                            <span class="pe-7s-config main-color icon add"></span>
                            <div class="holder">
                                <span class="title large">Services designed for your success</span>
                                <p>
                                    Thinking and being digital requires fundamental practice, culture, and technology change. And that means institutionalizing modern disciplines
                                    such as human-centered design and lean-agile engineering. Everything we offer is designed to accelerate your journey to becoming a digital-first
                                    agency.
                                </p>
                            </div>
                        </div><!-- end of icon-box -->
                    </div>
                    <div class="row">
                        <!-- start of icon-box -->
                        <div class="col-xs-12 col-sm-6 mar-bottom-sm icon-box">
                            <span class="pe-7s-like2 main-color icon add"></span>
                            <div class="holder">
                                <span class="title large">Experience to solve your toughest challenges</span>
                                <p>
                                    We founded and scaled NativoPlus, built and sold technology startups, created standards that power the internet, and more. With our unique blend of government
                                    and commercial expertise, you can rely on us to help solve your agency’s toughest digital challenges.
                                </p>
                            </div>
                        </div><!-- end of icon-box -->
                        <!-- start of icon-box -->
                        <div class="col-xs-12 col-sm-6 mar-bottom-sm icon-box">
                            <span class="pe-7s-gym main-color icon add"></span>
                            <div class="holder">
                                <span class="title large">Strengthening your culture through ours</span>
                                <p>
                                    Culture change is at the heart of achieving digital mastery. From openly sharing our knowledge to hiring first-rate talent to treating every interaction
                                    as a teaching opportunity, our culture is designed to empower you to succeed in the digital age.
                                </p>
                            </div>
                        </div><!-- end of icon-box -->
                    </div>
                </div>
            </div>
           <CallToAction/>
        </main><!-- end of page main section -->
        <!-- Footer Component -->
        <Footer />
    </div>
    <!-- Back Top of the page -->
    <BackToTop />
</div><!-- end of main page wrapper -->
<!-- Code -->
