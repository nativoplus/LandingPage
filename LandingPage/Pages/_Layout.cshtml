@using Microsoft.AspNetCore.Components.Web
@namespace LandingPage.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="shortcut icon" href="template/favicon.png">
    <link rel="apple-touch-icon" href="template/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="template/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="template/apple-touch-icon-114x114.png">
    <title>Blazor App</title>
    @*Ant Design*@
    <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet" />
    <link href="template/css/style.css" rel="stylesheet" media="screen" />
    <link href="LandingPage.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

</head>
<body>
    @RenderBody()

    <!-- Blazor -->
    <script src="_framework/blazor.server.js"></script>
    @*Ant Design*@
    <script src="_content/AntDesign/js/ant-design-blazor.js"></script>
    @*MudBlazor*@
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script>
        window.typeWriter = (textList) => {

                    var dataText = ["Developers", "Engineers", "Project Managers", "People", "Nativo"];

                    if(textList.length > 0){
                        dataText = textList;
                    }
                    else{
                        dataText = "Typewriter Animation"
                    }

                    // type one text in the typwriter
                    // keeps calling itself until the text is finished
                    function typeWriter(text, i, fnCallback) {
                        // chekc if text isn't finished yet
                        if (i < (text.length)) {
                            // add next character to h1

                        document.getElementById("typewriter").innerHTML = '<h1 class="display-2 text-white h2-landing"><span class="text-primary">Hello</span></h1>' + text.substring(0, i + 1) + '<span aria-hidden="true" id="typewriter-span"></span>';

                            // wait for a while and call this function again for next character
                            setTimeout(function () {
                                typeWriter(text, i + 1, fnCallback)
                            }, 100);
                        }
                        // text finished, call callback if there is a callback function
                        else if (typeof fnCallback == 'function') {
                            // call callback after timeout
                            setTimeout(fnCallback, 3000);
                        }
                    }
                    // start a typewriter animation for a text in the dataText array
                    function StartTextAnimation(i) {
                        if (typeof dataText[i] == 'undefined') {
                            setTimeout(function () {
                                StartTextAnimation(0);
                            }, 5000);
                        }
                        // check if dataText[i] exists
                        else if (i < dataText[i].length) {
                            // text exists! start typewriter animation
                            typeWriter(dataText[i], 0, function () {
                                // after callback (and whole text has been animated), start next text
                                StartTextAnimation(i + 1);
                            });
                        }
                    }

                    StartTextAnimation(0);
                };</script>
</body>
</html>
